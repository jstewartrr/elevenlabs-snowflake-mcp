FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir flask==3.0.0 requests==2.31.0 google-auth==2.25.2 gunicorn==21.2.0

# Copy server code
COPY notebooklm-mcp/server.py .

EXPOSE 8080

CMD ["gunicorn", "--bind", "0.0.0.0:8080", "--workers", "2", "--timeout", "120", "server:app"]
